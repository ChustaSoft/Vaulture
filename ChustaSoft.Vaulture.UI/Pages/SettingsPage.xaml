<Page x:Class="ChustaSoft.Vaulture.UI.Pages.SettingsPage"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
            xmlns:local="clr-namespace:ChustaSoft.Vaulture.UI.Pages"
            Title="SettingsPage"
            d:DesignHeight="450"
            d:DesignWidth="800"
            d:DataContext="{d:DesignInstance local:SettingsPage, IsDesignTimeCreatable=False}"  
            mc:Ignorable="d">

    <StackPanel Margin="10">
        <TextBlock FontSize="20" Margin="10" FontWeight="Medium" Text="Personalization" />
        <TextBlock Margin="10" Text="Select Theme" />
        <StackPanel Orientation="Horizontal" Margin="10" >
            <RadioButton x:Name="LightThemeRadioButton" Command="{Binding ViewModel.LightThemeRadioButtonCheckedCommand, Mode=OneWay}" Content="Light" GroupName="selectTheme" />
            <RadioButton x:Name="DarkThemeRadioButton" Command="{Binding ViewModel.DarkThemeRadioButtonCheckedCommand, Mode=OneWay}" Content="Dark" GroupName="selectTheme" />
        </StackPanel>


    </StackPanel>
</Page>
